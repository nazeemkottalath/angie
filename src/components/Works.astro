---
import Bars from "./Bars.astro"

import svgUnderline from '../assets/underline.svg'
import arrowCard from '../assets/arrow-card.svg'

const portfolio = [
  { 
    name: 'Shelbourne St Church of Christ', desc: `3460 Shelbourne St   Fridays 4-7 pm, Saturdays 10 pm-5 pm`,
    cover: `https://res.cloudinary.com/djuowld3a/image/upload/v1759199076/shelb_p6myk0.jpg`
  },
  { 
    name: 'Daily Fresh', desc: `1627 Quadra St - Every day 10 am-9pm`,
    cover: `https://res.cloudinary.com/djuowld3a/image/upload/v1759199307/2024-10-07_w2ygav.webp`
  },
  { 
    name: 'Smoke 2 Snack Chinatown', desc: `UI design - User research - webflow development`,
    cover: `https://images.pexels.com/photos/441963/pexels-photo-441963.jpeg?auto=compress&cs=tinysrgb&w=1600`
  },
  { 
    name: 'Smoke 2 Snack Fort St', desc: `UI design - User research - webflow development`,
    cover: `https://images.pexels.com/photos/245240/pexels-photo-245240.jpeg?auto=compress&cs=tinysrgb&w=1600`
  },
]
---


<section class="py-25 space-y-10 px-5" id="work">
    <div class="max-w-md mx-auto relative ">
      <h1 class="text-4xl font-medium text-center">Donation Centres</h1>
      <img src={svgUnderline.src} alt="arrow" width="140" class="absolute left-50 -bottom-1" />
    </div>
  
    <div class="max-w-3xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-10"> 
      {portfolio.map(item => ( 
        <a href="#" class="flex flex-col bg-white p-5 group relative transition-all duration-200 hover:shadow-[4px_4px_0px_rgba(0,0,0,0.3)]">
          <div class="w-full h-[200px] overflow-hidden border-2">
           <img src={item.cover} alt="" class="w-full h-full object-cover" />
          </div>
          <div class="space-y-1 pt-4">
            <div class="flex pr-2">
              <h2 class="text-xl font-medium flex-1">{item.name}</h2>
              <img src={arrowCard.src} alt="arrow" width="25" />
            </div>
            <p class="mr-20">{item.desc}</p>
          </div>
          <Bars />
        </a>
      ))}
    </div>
</section>